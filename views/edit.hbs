<div class="d-flex justify-content-center">
    <div class="card" style="width: 50%">
        <div class="card-body">
            <div class="d-flex justify-content-center p-2">
                <h2>更改支出</h2>
            </div>
            <div class="d-flex justify-content-center ">
                <form action="/records/{{record._id}}/edit" method="POST">
                    <div class="d-flex p-2">
                        <label for="name">名稱：</label>
                        <input type="text" id="name" name="name" style="width: 300px" value="{{record.name}}" required>
                    </div>
                    <div class="d-flex p-2">
                        <label for="date">日期：</label>
                        <input type="date" id="date" name="date" value="{{record.date}}" required>
                    </div>
                    <div class="d-flex p-2">
                        <label for="category">類別：</label>
                        <select id="category" name="category" required>
                            <option value="{{record.category}}" selected>{{record.category}}</option>
                            <option value="家居物業">家居物業</option>
                            <option value="交通出行">交通出行</option>
                            <option value="休閒娛樂">休閒娛樂</option>
                            <option value="餐飲食品">餐飲食品</option>
                            <option value="其他">其他</option>
                        </select>
                    </div>
                    <div class="d-flex p-2">
                        <label for="amount">金額：</label>
                        <input type="number" id="amount" name="amount" min="0" value="{{record.amount}}" required>
                    </div>
                    <button type="submit">修改</button>
                </form>
            </div>
        </div>
    </div>
</div>